<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_text"
        android:text="UPDATE RECORD"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="100dp"
        tools:ignore="HardcodedText,SpUsage" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/StuId_text"
        android:textSize="24dp"
        android:layout_below="@+id/update_text"
        tools:ignore="HardcodedText,SpUsage" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/StudentID"
        android:inputType="textPersonName"
        android:layout_below="@id/StuId_text"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/StudentID"
        android:layout_below="@+id/update_text"

        android:textSize="18dp"
        android:id="@+id/btn_search"
        tools:ignore="HardcodedText,SpUsage" />




    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/left_layout"
        android:orientation="vertical"
        android:layout_below="@+id/StudentID"
        android:layout_marginTop="95dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Name_text"
            android:text="Full Name"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/FName"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sabak_text"
            android:text="Prev Sabak"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/PSabak"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sabaki_text"
            android:text="Prev Sabaki"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/PSabaki"/>

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/right_layout"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/left_layout"
    android:layout_below="@+id/StudentID"
    android:layout_marginTop="95dp"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="60dp"

        android:layout_gravity="center"
        android:layout_toRightOf="@+id/StudentID"
        android:layout_below="@+id/update_text"

        android:textSize="18dp"
        android:id="@+id/up_name"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="60dp"

        android:layout_gravity="center"
        android:layout_toRightOf="@+id/StudentID"
        android:layout_below="@+id/update_text"

        android:textSize="18dp"
        android:id="@+id/up_sabak"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="60dp"

        android:layout_gravity="center"
        android:layout_toRightOf="@+id/StudentID"
        android:layout_below="@+id/update_text"

        android:textSize="18dp"
        android:id="@+id/up_sabaki"
        tools:ignore="HardcodedText,SpUsage" />

</LinearLayout>



























</RelativeLayout>